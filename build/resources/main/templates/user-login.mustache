{{>layout/header}}
    <div id="posts_list">
        <div class="container col-md-6">
            <h1>로그인</h1>
            <a href="/oauth2/authorization/google" class="btn btn-success" role="button">Google Login</a>
            <a href="/oauth2/authorization/naver" class="btn btn-secondary" role="button">Naver Login</a>
            <form action="/loginProc" method="post">
                <div class="form-group">
                    <label>아이디</label>
                    <input type="text" class="form-control" id="email" name="email" placeholder="아이디(email)를 입력해주세요">
                </div>
                <div class="form-group">
                    <label>비밀번호</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="비밀번호를 입력해주세요">
                </div>
                <button class="btn btn-primary bi bi-person" id="btn-login"> 로그인</button>
                <a href="/" role="button" class="btn btn-info bi bi-arrow-return-left"> 목록</a>
            </form>
        </div>
    </div>
{{>layout/footer}}