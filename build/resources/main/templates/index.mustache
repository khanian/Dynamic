{{>layout/header}}

  <div class="col-md-12">
      <div class="container">
      <h1>스프링부트로 시작하는 웹 서비스 Ver.2</h1>
      <div class="row">
          <div class="col-md-6">
              {{#username}}
                  <a href="/posts/save" role="button" class="btn btn-primary">글 등록</a>
                  <a href="/logout" class="btn btn-outline-dark active" role="button">Logout</a>
                  Logged in as: <span id="user">{{username}}</span>
              {{/username}}
              {{^username}}
                  <a href="/login" role="button" class="btn btn-primary">로그인</a>
                  <a href="/oauth2/authorization/google" class="btn btn-success" role="button">Google Login</a>
                  <a href="/oauth2/authorization/naver" class="btn btn-secondary" role="button">Naver Login</a>
                  <a href="/signup" class="btn btn-outline-dark action" role="button">Sign Up</a>
              {{/username}}
          </div>
      </div>
      <br>
      <!-- 목록 출력 영역 -->
      <table class="table table-horizontal table-bordered">
          <thead class="thead-strong">
          <tr>
              <th>게시글번호</th>
              <th>제목1</th>
              <th>작성자</th>
              <th>최종수정일</th>
          </tr>
          </thead>
          <tbody id="tbody">
          {{#posts}}
              <tr>
                  <td>{{id}}</td>
                  <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                  <td>{{author}}</td>
                  <td>{{modifiedDate}}</td>
              </tr>
          {{/posts}}
          </tbody>
      </table>
      </div>
  </div>
{{>layout/footer}}